<h3 class="conversations_list_title">{{model.title}} <span class="gray">(you and {{otherUser.username}})</span></h3>

<ul class="messages_list">
  {{#each model.sortedMessages as |message|}}
    <li class="message_list_item">
      <div class="message_details">
        <p>{{message.body}}</p>
        <aside>{{#link-to 'user' message.user.slug}}{{message.user.username}}{{/link-to}} <span class="divider">|</span> {{message.formattedDateTime}}</aside>
      </div>
    </li>
  {{/each}}
</ul>

<div class="leave_a_message_form">
  {{message-bar errorMessage=errorMessage responseMessage=responseMessage}}
  
  <form {{action 'createMessage' on='submit'}}>
    <div class="form-group">
      {{textarea value=body placeholder="write a message" autofocus="autofocus" class="form-control"}}
    </div>

    <div class="form-group">
      <button disabled={{isDisabled}} class="btn btn-default">Submit</button>
    </div>
  </form>
</div>
