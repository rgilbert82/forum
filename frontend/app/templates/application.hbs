<div class="main">

  <div class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        {{#link-to 'forums' class="navbar-brand"}}<span class="glyphicon glyphicon-headphones"></span>synth forum{{/link-to}}
      </div>

      <div class="collapse navbar-collapse navbar-left" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li>{{#link-to 'forums'}}home{{/link-to}}</li>
          {{#if currentUser}}
            <li>{{#link-to 'user' currentUser.slug}}{{currentUser.username}}'s account{{/link-to}}</li>
            <li>{{#link-to 'mailbox'}}mail{{/link-to}}</li>
            <li><a href {{action 'logout' on='click'}}>logout</a></li>
          {{else}}
            <li>{{#link-to 'register'}}register{{/link-to}}</li>
          {{/if}}
        </ul>
      </div>

      <div class="navbar-right">
        {{#unless currentUser}}
          <div class="header_account">
            <form {{action 'login' on="submit"}} class="navbar-form">
              <div class="form-group">
                {{input type='text' value=username placeholder="username" autofocus="autofocus" class="form-control"}}
                {{input type='password' value=password placeholder="password" autofocus="autofocus" class="form-control"}}
                <button disabled={{isDisabled}} class="btn btn-default">login</button>
              </div>
            </form>
          </div>
        {{/unless}}
      </div>
    </div>
  </div> <!-- Navbar -->

  <div class="container-fluid">
    {{message-bar errorMessage=errorMessage responseMessage=responseMessage}}

    <section class="content">
      {{outlet}}
    </section>
  </div>
</div>
