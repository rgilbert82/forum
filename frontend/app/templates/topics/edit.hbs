{{message-bar errorMessage=errorMessage responseMessage=responseMessage}}

<div class="large_form">
  <h3 class="form_title">Edit Topic</h3>

  {{#if currentUser}}
    <form {{action 'editTopic' on='submit'}}>
      <div class="form-group">
        {{input type='text' value=model.title placeholder="Topic Title" autofocus="autofocus" class="form-control"}}
      </div>

      <div class="form-group">
        {{textarea value=model.body placeholder="Topic body" autofocus="autofocus" class="form-control"}}
      </div>

      <div class="form-group">
        <button disabled={{isDisabled}} class="btn btn-default">Submit</button>
      </div>
    </form>
  {{/if}}
</div>

<div class="topic_profile_links">
  <ul>
    {{#if currentUser}}
      <li><a href class="add_item_box_link" {{action 'deleteTopic'}}>Delete Topic</a></li>
    {{/if}}  
    <li>{{#link-to 'topics.show' model.forum.slug model.slug}}Cancel{{/link-to}}</li>
  </ul>
</div>
